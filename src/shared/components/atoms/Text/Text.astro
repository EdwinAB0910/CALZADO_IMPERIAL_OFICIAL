---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  color?: 'default' | 'muted' | 'primary';
  class?: string;
  as?: 'p' | 'span' | 'div';
  id?: string;
}

const {
  size = 'md',
  color = 'default',
  class: className = '',
  as: Tag = 'p',
  id,
} = Astro.props;

const sizeClasses: Record<'sm' | 'md' | 'lg', string> = {
  sm: 'atom-text--sm',
  md: 'atom-text--md',
  lg: 'atom-text--lg',
};

const colorClasses: Record<'default' | 'muted' | 'primary', string> = {
  default: 'atom-text--default',
  muted: 'atom-text--muted',
  primary: 'atom-text--primary',
};

const sizeClass = sizeClasses[size as keyof typeof sizeClasses];
const colorClass = colorClasses[color as keyof typeof colorClasses];
---

<Tag class={`atom-text ${sizeClass} ${colorClass} ${className}`} {...(id && { id })}>
  <slot />
</Tag>

<style>
  .atom-text {
    font-family: var(--font-primary);
    line-height: 1.6;
    margin: 0;
  }

  .atom-text--sm {
    font-size: 1.4rem;
  }

  .atom-text--md {
    font-size: 1.6rem;
  }

  .atom-text--lg {
    font-size: 1.8rem;
  }

  .atom-text--default {
    color: rgb(199, 187, 187);
  }

  .atom-text--muted {
    color: rgba(255, 255, 255, 0.39);
  }

  .atom-text--primary {
    color: whitesmoke;
  }
</style>

