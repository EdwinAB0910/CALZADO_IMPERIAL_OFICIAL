---
import Input from '@components/atoms/Input/Input.astro';
import Button from '@components/atoms/Button/Button.astro';
---

<section class="newsletter-section">
  <div class="newsletter__container">
    <div class="newsletter__content">
      <h2 class="newsletter__title">Suscr√≠bete a Nuestro Newsletter</h2>
      <p class="newsletter__description">
        Recibe ofertas exclusivas, novedades de colecciones y tips de estilo directo en tu correo.
      </p>
      <form class="newsletter__form" method="POST" action="/newsletter">
        <div class="newsletter__input-wrapper">
          <Input
            type="email"
            name="email"
            placeholder="tu@correo.com"
            required
            class="newsletter__input"
          />
        </div>
        <div class="newsletter__button-wrapper">
          <Button type="submit" variant="primary" class="newsletter__button">
            Suscribir
          </Button>
        </div>
      </form>
      <p class="newsletter__disclaimer">
        Sin spam, solo contenido de valor. Puedes darte de baja en cualquier momento.
      </p>
    </div>
  </div>
</section>

<style lang="scss">
  @use '@styles/_breakpoints.scss' as *;

  .newsletter-section {
    background-color: var(--color-gray-50);
    padding: 6rem 0;
  }

  .newsletter__container {
    width: min(90%, 120rem);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .newsletter__content {
    max-width: 60rem;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter__title {
    color: var(--color-gray-900);
    margin: 0 0 1.6rem 0;
    font-size: 2.4rem;
    font-weight: var(--font-weight-bold);
    font-family: var(--font-primary);
    line-height: 1.2;
  }

  .newsletter__description {
    color: var(--color-gray-600);
    margin: 0 0 3.2rem 0;
    font-size: 1.5rem;
    line-height: 1.6;
    font-family: var(--font-primary);
  }

  .newsletter__form {
    display: flex;
    gap: 1.2rem;
    margin-bottom: 1.6rem;
    flex-direction: column;
  }

  .newsletter__input-wrapper {
    flex: 1;
    width: 100%;
  }

  .newsletter__input-wrapper :global(.atom-input) {
    padding: 1.6rem 2rem;
    font-size: 1.6rem;
    border: 1px solid var(--color-gray-300);
    border-radius: var(--radius);
    background-color: var(--color-white);
  }

  .newsletter__input-wrapper :global(.atom-input:focus) {
    outline: none;
    border-color: var(--color-black);
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
  }

  .newsletter__button-wrapper {
    flex-shrink: 0;
  }

  .newsletter__button-wrapper :global(.btn) {
    padding: 1.6rem 3.2rem;
    font-size: 1.6rem;
    background-color: var(--color-black) !important;
    color: var(--color-white) !important;
    border: 2px solid var(--color-black) !important;
    white-space: nowrap;
    border-radius: var(--radius);
    box-shadow: none !important;
  }

  .newsletter__button-wrapper :global(.btn:hover) {
    background-color: var(--color-gray-800) !important;
    border-color: var(--color-gray-800) !important;
    transform: none !important;
    box-shadow: none !important;
  }

  .newsletter__button-wrapper :global(.btn::before) {
    display: none;
  }

  .newsletter__disclaimer {
    color: var(--color-gray-600);
    font-size: 1.3rem;
    margin: 0;
    font-family: var(--font-primary);
    line-height: 1.5;
  }

  @include tablet-small {
    .newsletter__form {
      flex-direction: row;
    }

    .newsletter__input-wrapper {
      width: auto;
    }
  }

  @include tablet-medium {
    .newsletter__title {
      font-size: 2.8rem;
    }

    .newsletter__description {
      font-size: 1.6rem;
    }
  }
</style>

