---
import Button from '@components/atoms/Button/Button.astro';
import SearchBar from '@features/products/components/molecules/SearchBar/SearchBar.astro';
import { Search, ShoppingCart, Menu, X } from 'lucide-astro';
---

<header class="organism-header">
  <div class="header__container">
    <!-- Primera fila: Logo, Nav, Carrito (Desktop) / Logo, Carrito, Hamburger (Mobile) -->
    <div class="header__top">
      <div class="header__left">
        <a href="/" class="header__logo">
          <h2 class="header__logo-title">CALZADO IMPERIAL</h2>
          <span class="header__logo-subtitle">Premium Footwear</span>
        </a>
      </div>

      <!-- Navegaci√≥n desktop -->
      <nav class="header__nav header__nav--desktop">
        <a href="/" class="header__nav-link">Inicio</a>
        <a href="/productos" class="header__nav-link">Productos</a>
        <a href="/nosotros" class="header__nav-link">Nosotros</a>
        <a href="/contacto" class="header__nav-link">Contacto</a>
      </nav>

      <!-- Carrito, b√∫squeda y hamburger -->
      <div class="header__right">
        <button class="header__search-icon" id="search-icon-toggle" aria-label="Toggle search">
          <Search size={24} stroke-width={2} />
        </button>
        <a href="/carrito" class="header__cart-button">
          <ShoppingCart size={20} stroke-width={2} class="cart-icon" />
          <span class="cart-text">Carrito</span>
          <span class="cart-badge" id="cart-badge"></span>
        </a>
        <!-- Men√∫ hamburguesa -->
        <button class="header__menu-toggle" id="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
          <Menu size={24} stroke-width={2} class="menu-icon" id="menu-icon" />
          <X size={24} stroke-width={2} class="close-icon" id="close-icon" style="display: none;" />
        </button>
      </div>
    </div>

    <!-- Segunda fila: Barra de b√∫squeda (debajo del logo en desktop, visible en mobile cuando se activa) -->
    <div class="header__search-wrapper" id="search-wrapper">
      <div class="header__search">
        <SearchBar />
      </div>
    </div>

    <!-- Men√∫ m√≥vil -->
    <nav class="header__nav header__nav--mobile" id="mobile-nav">
      <a href="/" class="header__nav-link">Inicio</a>
      <a href="/productos" class="header__nav-link">Productos</a>
      <a href="/nosotros" class="header__nav-link">Nosotros</a>
      <a href="/contacto" class="header__nav-link">Contacto</a>
    </nav>
  </div>
</header>

<style lang="scss">
  @use '@styles/_breakpoints.scss' as *;

  // üîπ Estilos base (Mobile First) - Pantallas peque√±as
  .organism-header {
    background-color: var(--color-white);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 1.2rem 0;
  }

  .header__container {
    width: min(90%, 120rem);
    margin: 0 auto;
    padding: 0 2rem;
  }

  // Primera fila: Logo, Carrito, Hamburger
  .header__top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.2rem;
    margin-bottom: 1.2rem;
  }

  .header__left {
    flex: 1;
  }

  .header__logo {
    text-decoration: none;
    color: var(--color-gray-900);
    display: inline-block;
  }

  .header__logo-title {
    margin: 0 0 0.4rem 0;
    font-size: 1.8rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-gray-900);
    line-height: 1.2;
    font-family: var(--font-primary);
  }

  .header__logo-subtitle {
    display: block;
    font-family: var(--font-primary);
    font-size: 1.1rem;
    font-weight: var(--font-weight-regular);
    color: var(--color-gray-600);
    line-height: 1.4;
  }

  // Men√∫ hamburguesa
  .header__menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 10;
    color: var(--color-gray-900);
    transition: color 0.3s ease;
  }

  .header__menu-toggle:hover {
    color: var(--color-gray-600);
  }

  // Navegaci√≥n desktop (oculta en mobile)
  .header__nav--desktop {
    display: none;
  }

  // Navegaci√≥n mobile
  .header__nav--mobile {
    display: none;
    flex-direction: column;
    gap: 1.2rem;
    padding: 2rem 0;
    border-top: 1px solid var(--color-gray-200);
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
  }

  .header__nav--mobile.is-open {
    display: flex;
    max-height: 30rem;
  }

  .header__nav-link {
    font-family: var(--font-primary);
    font-size: 1.6rem;
    font-weight: var(--font-weight-medium);
    color: var(--color-gray-700);
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 0.8rem 0;
  }

  .header__nav-link:hover {
    color: var(--color-gray-900);
  }

  // Carrito y b√∫squeda
  .header__right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }


  .header__search-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-gray-700);
    transition: color 0.3s ease;
  }

  .header__search-icon:hover {
    color: var(--color-gray-900);
  }

  .header__cart-button {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: auto;
    height: 4rem;
    padding: 1rem 1.6rem;
    gap: 0.8rem;
    border: 2px solid var(--color-gray-900);
    border-radius: 0.8rem;
    background-color: var(--color-white);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
  }

  .header__cart-button:hover {
    background-color: var(--color-gray-50);
  }

  .cart-icon {
    display: block;
    flex-shrink: 0;
    color: var(--color-gray-900);
    transition: color 0.3s ease;
  }

  .cart-text {
    display: inline-block;
    font-family: var(--font-primary);
    font-size: 1.6rem;
    font-weight: var(--font-weight-medium);
    color: var(--color-gray-900);
    transition: color 0.3s ease;
  }

  .cart-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 2rem;
    height: 2rem;
    padding: 0.2rem 0.6rem;
    background-color: #EF4444;
    color: var(--color-white);
    border-radius: 50%;
    font-size: 1.2rem;
    font-weight: var(--font-weight-bold);
    position: absolute;
    top: -0.5rem;
    right: -0.5rem;
  }

  // Barra de b√∫squeda
  .header__search-wrapper {
    width: 100%;
    display: none;
    margin-top: 1.2rem;
  }

  .header__search-wrapper.is-open {
    display: block;
  }

  .header__search {
    width: 100%;
  }

  // üîπ Tablet Small (‚â• 620px) - Layout tablet
  @include tablet-small {
    // Ocultar men√∫ hamburguesa en tablet
    .header__menu-toggle {
      display: none;
    }

    // Mostrar navegaci√≥n desktop en tablet
    .header__nav--desktop {
      display: flex;
      flex-direction: row;
      gap: 2.4rem;
      align-items: center;
    }

    // Ocultar navegaci√≥n mobile
    .header__nav--mobile {
      display: none !important;
    }

    // Ocultar √≠cono de b√∫squeda en tablet+ (la barra est√° siempre visible)
    .header__search-icon {
      display: none;
    }

    // Ajustar layout para tablet
    .header__top {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 2rem;
      margin-bottom: 0;
    }

    .header__left {
      flex: 0 0 auto;
    }

    .header__nav--desktop {
      flex: 1;
      justify-content: center;
      margin: 0 auto;
    }

    .header__right {
      flex: 0 0 auto;
      gap: 1.5rem;
    }

    // Mostrar barra de b√∫squeda en segunda fila (siempre visible en tablet+)
    .header__search-wrapper {
      width: 100%;
      margin-top: 1.6rem;
      display: block !important;
    }
  }

  // üîπ Tablet Medium (‚â• 768px) y superiores - Layout desktop
  @include tablet-medium {
    .organism-header {
      padding: 1.6rem 0;
    }

    .header__container {
      padding: 0 4rem;
      display: flex;
      flex-direction: column;
    }

    // Ocultar men√∫ hamburguesa en desktop
    .header__menu-toggle {
      display: none;
    }

    // Mostrar navegaci√≥n desktop
    .header__nav--desktop {
      display: flex;
      flex-direction: row;
      gap: 3.2rem;
      align-items: center;
    }

    // Ocultar navegaci√≥n mobile
    .header__nav--mobile {
      display: none !important;
    }

    // Logo m√°s grande
    .header__logo-title {
      font-size: 2.2rem;
    }

    .header__logo-subtitle {
      font-size: 1.2rem;
    }

    // Layout de primera fila: Logo, Nav, Carrito/B√∫squeda
    .header__top {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 3rem;
      margin-bottom: 1.6rem;
    }

    .header__left {
      flex: 0 0 auto;
    }

    .header__nav--desktop {
      flex: 1;
      justify-content: center;
      margin: 0 auto;
    }

    .header__right {
      flex: 0 0 auto;
      gap: 1.5rem;
      display: flex;
      align-items: center;
    }

    // Ocultar √≠cono de b√∫squeda en desktop (la barra est√° siempre visible)
    .header__search-icon {
      display: none;
    }

    // Barra de b√∫squeda en segunda fila completa (siempre visible en desktop)
    .header__search-wrapper {
      width: 100%;
      margin-top: 0;
      display: block !important;
    }
  }

  // üîπ Desktop (‚â• 1024px) - Ajustes finales
  @include tablet-landscape {
    .header__nav--desktop {
      gap: 4rem;
    }

    .header__top {
      gap: 4rem;
    }

    .header__nav-link {
      font-size: 1.6rem;
    }
  }
</style>

<script is:inline>
  // Inicializar badge del carrito
  function initCartBadge() {
    function updateCartBadge() {
      try {
        const stored = localStorage.getItem('sneakerstore_cart');
        const badge = document.getElementById('cart-badge');
        if (!badge) return;
        
        if (!stored) {
          badge.textContent = '0';
          badge.style.display = 'flex';
          return;
        }
        
        const cart = JSON.parse(stored);
        const count = cart.items ? cart.items.reduce((sum, item) => sum + item.quantity, 0) : 0;
        badge.textContent = count.toString();
        badge.style.display = 'flex';
      } catch (e) {
        console.error('Error updating cart badge:', e);
        const badge = document.getElementById('cart-badge');
        if (badge) {
          badge.textContent = '0';
          badge.style.display = 'flex';
        }
      }
    }

    updateCartBadge();
    window.addEventListener('cartUpdated', updateCartBadge);
    setInterval(updateCartBadge, 1000);
  }

  // Inicializar men√∫ hamburguesa
  function initMobileMenu() {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileNav = document.getElementById('mobile-nav');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    if (menuToggle && mobileNav && menuIcon && closeIcon) {
      menuToggle.addEventListener('click', () => {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        const newState = !isExpanded;
        
        menuToggle.setAttribute('aria-expanded', newState);
        mobileNav.classList.toggle('is-open');
        
        // Cambiar iconos
        if (newState) {
          menuIcon.style.display = 'none';
          closeIcon.style.display = 'block';
        } else {
          menuIcon.style.display = 'block';
          closeIcon.style.display = 'none';
        }
      });

      // Cerrar men√∫ al hacer clic en un enlace
      const navLinks = mobileNav.querySelectorAll('.header__nav-link');
      navLinks.forEach(link => {
        link.addEventListener('click', () => {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.classList.remove('is-open');
          menuIcon.style.display = 'block';
          closeIcon.style.display = 'none';
        });
      });
    }
  }

  // Inicializar toggle de b√∫squeda en mobile
  function initSearchToggle() {
    const searchIcon = document.getElementById('search-icon-toggle');
    const searchWrapper = document.getElementById('search-wrapper');

    if (searchIcon && searchWrapper) {
      searchIcon.addEventListener('click', () => {
        searchWrapper.classList.toggle('is-open');
      });
    }
  }

  if (typeof window !== 'undefined') {
    initCartBadge();
    initMobileMenu();
    initSearchToggle();
  }
</script>

