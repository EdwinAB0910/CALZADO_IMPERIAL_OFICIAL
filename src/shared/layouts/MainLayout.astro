---
import Header from '../components/organisms/Header/Header.astro';
import Footer from '../components/organisms/Footer/Footer.astro';
import WhatsAppButton from '../components/molecules/WhatsAppButton/WhatsAppButton.astro';
import '../../styles/app.scss';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {Astro.props.title || 'CALZADO IMPERIAL - Tu tienda de zapatillas'}
    </title>
  </head>
  <body>
    <Header />
    <main class="main-content">
      <slot />
    </main>
    <Footer />
    <WhatsAppButton />
  </body>
</html>

<style>
  .main-content {
    min-height: 100dvh;
    padding-bottom: 4rem;
    /* padding: 4rem 0; */
  }
</style>

